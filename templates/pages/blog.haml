-# %h1= @path
-# %ul
-#   - if archives.length > 0
-#     - for entry in archives
-#       %li
-#         %a{:href => entry.path}= entry.title
%section#articles
  - for article in archives[0...3]
    %article.post
      %header
        %h3
          %a{:href => article.path}= article.title
        %span.date= article.date
      %section.content
        = article.summary
      .more
        %a{:href => "#{article.path}#disqus_thread"} 0 Comments &raquo;

%section#archives
  %ul.list-unstyled
    - archives[3..-1].each do |entry|
      %li
        %h5
          %a{:href => entry.path}= entry.title

:javascript
  var disqus_shortname = 'dougmcinnes';
  (function () {
  var s = document.createElement('script'); s.async = true;
  s.type = 'text/javascript';
  s.src = '//' + disqus_shortname + '.disqus.com/count.js';
  (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
  }());
